                    </hbox>    
                    <slider id="slider1" pos="66" />
                    <progress id="progress1" pos="33" />
                    <progress id="progress2" pos="66" styleNames="green" />
                    <slider id="slider2" start="25" end="75" />
                </vbox>    

                <slider id="slider3" pos="66" direction="vertical" />
                <progress id="progress3" pos="33" direction="vertical" />
                <progress id="progress4" pos="66" direction="vertical" styleNames="red" />
                <slider id="slider4" start="25" end="75" direction="vertical" />
