<vbox text="Basic" icon="kenney/images/grey_tickGrey.png">
    <hbox>
        <vbox>
            <hbox>
                <button text="Default" />
                <button text="Red" styleName="red" />
                <button text="Green" styleName="green" />
            </hbox> 
            <hbox>
                <button text="Yellow" styleName="yellow" />
                <button text="Grey" styleName="grey" />
            </hbox>
            <hbox>
                <vbox>
                    <hbox>
                        <vbox>
                            <checkbox text="Check 1" selected="true" />
                            <checkbox text="Check 2" />
                            <checkbox text="Check 3" selected="true" />
                        </vbox>
                        <vbox>
                            <optionbox text="Option 1"  />
                            <optionbox text="Option 2" selected="true" />
                            <optionbox text="Option 3" />
